<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="normalText">
		<item name="android:textSize">@dimen/normal_size</item>
	</style>

	<style name="whiteText" parent="normalText">
		<item name="android:textColor">@color/white</item>
		<item name="android:padding">@dimen/activity_margin_quarter</item>
	</style>

	<style name="blackText" parent="normalText">
		<item name="android:textColor">@color/black</item>
		<item name="android:padding">@dimen/activity_margin_quarter</item>
	</style>

	<style name="grayText" parent="normalText">
		<item name="android:textColor">@color/grgray</item>
		<item name="android:padding">@dimen/activity_margin_quarter</item>
	</style>

	<style name="cornerEditWhite" parent="whiteText">
		<item name="android:background">@drawable/corner</item>
	</style>

	<style name="cornerEditBlack" parent="blackText">
		<item name="android:background">@drawable/corner</item>
	</style>

	<style name="cornerEditGray" parent="grayText">
		<item name="android:background">@drawable/corner</item>
	</style>
</resources>